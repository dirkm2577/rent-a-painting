<div class="container py-4 py-xl-5">
  <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
  <% @paintings.each do |painting| %>
    <%= link_to painting_path(painting) do %>
    <div class="col">
      <div>
        <img class="rounded img-fluid d-block w-100 fit-cover" style="height: 500px;" src="<%= painting.image_url %>" />
        <%= cl_image_tag painting.image_url.key, width: 400, height: 300, crop: :fill %>
          <div class="py-4">
            <h2>Name:<%= painting.name %></h2>
            <p>Price: <%= painting.price %> </p>
          </div>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
