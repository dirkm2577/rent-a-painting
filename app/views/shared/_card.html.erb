<div class="container py-4 py-xl-5">
  <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
    <% @paintings.each do |painting| %>
      <%= link_to painting_path(painting) do %>
        <div class="card" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
          <img class="card-img-top w-100 d-block fit-cover" style="height: 400px;" <%= cl_image_tag(painting.photo.key, :cloud_name => "dfe5bng4a") %>
          <div class="card-body p-4">
            <h4 class="card-title"><strong><%= painting.name %></strong></h4>
            <p class="card-text"><strong>Price/day: Â£<%= painting.price %></strong></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
